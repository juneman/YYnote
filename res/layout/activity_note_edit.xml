<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:id="@+id/note_edit_title"
	    android:gravity="top"	
	    android:orientation="horizontal"
	    android:background="@drawable/title_bg"    
	    >
	    
	    <ImageView
	        android:id="@+id/note_edit_save"
	        android:layout_width="40dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="7dp"
	        android:layout_marginLeft="10dp"
	        android:paddingRight="10dp"
	        android:src="@drawable/save" />

	    <TextView
	        android:id="@+id/note_edit_modify_time"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:paddingTop="12dp"
		    android:paddingLeft="10dp"
	        android:textSize="13sp"/>

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="43dp"
	        android:gravity="right"
	        android:orientation="horizontal" >

			<LinearLayout 
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal">
		       
		        <ImageView
		            android:id="@+id/note_edit_clock"
		            android:layout_width="36dp"
		            android:layout_height="20dp"		          
		            android:layout_marginTop="14dp"
		            android:paddingLeft="10dp"
		            android:src="@drawable/clock2" />
   
				<TextView
				    android:id="@+id/note_edit_clock_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:paddingTop="14dp"
		            android:paddingRight="10dp"		            
		            android:textSize="13sp" />
			</LinearLayout>
	      
	         <ImageView
	             android:id="@+id/note_edit_picture"
	             android:layout_width="35dp"
	             android:layout_height="26dp"
	             android:layout_marginTop="9dp"
	             android:paddingRight="10dp"
	             android:src="@drawable/picture" />
	         <ImageView
	             android:id="@+id/note_edit_audio"
	             android:layout_width="37dp"
	             android:layout_height="28dp"
	             android:layout_marginTop="9dp"
	             android:paddingRight="10dp"
	             android:src="@drawable/microphone" />
	         <ImageView
	             android:id="@+id/note_edit_share"
	             android:layout_width="36dp"
	             android:layout_height="26dp"
	             android:layout_marginTop="9dp"
	             android:paddingRight="10dp"
	             android:src="@drawable/share" />
	       
	    </LinearLayout>
	    
	</LinearLayout>
    <LinearLayout 
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:id="@+id/note_edit_main"
	    android:orientation="vertical"
	    android:background="#FDF2A1"
	    >

        <ImageButton
            android:id="@+id/note_edit_main_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/audiologo"
            android:contentDescription="@string/note_edit_audio_play"
            android:visibility="gone"
             />
	
	    <EditText
	        android:id="@+id/note_edit_content"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#FDF2A1"
	        android:ems="10"
	        android:gravity="top"
	        android:inputType="textMultiLine"
	        android:padding="12dip"
	        android:textSize="17sp" >
		
	        <requestFocus />
	    </EditText>
	</LinearLayout>
</LinearLayout>